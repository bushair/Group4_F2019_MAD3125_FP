<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39838ED6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of birth"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Earning"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_margin="5dp" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/has_vehicle_check"
            android:text="Has vehicle"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="14sp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:id="@+id/vehicle_layout"
            android:visibility="gone">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Car"
                android:padding="10dp" />
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Motorcycle"
                android:padding="10dp" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/vehicle_details_layout"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Make"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plate"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_margin="5dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_full_time"
                android:text="Full Time"
                android:padding="10dp"
                android:layout_margin="2dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_intern"
                android:text="Intern"
                android:padding="10dp"
                android:layout_margin="2dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_part_time"
                android:text="Part Time"
                android:padding="10dp"
                android:layout_margin="2dp"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_part_time"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_commission_based"
                android:text="Commission Based Part Time"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_fixed_based"
                android:text="Fixed Based Part Time"
                android:padding="10dp"
                android:layout_margin="5dp" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/full_time_layout"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bonus"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/intern_layout"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="School Name"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/part_time_layout"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rate"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hours worked"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_margin="5dp" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            android:background="#E1111B5C"
            android:text="Save"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</ScrollView>








